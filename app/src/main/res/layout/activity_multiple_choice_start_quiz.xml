<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MultipleChoiceStartQuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#040147">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="379dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="MULTIPLE CHOICE"
            android:textColor="#ffffff"
            android:textSize="28dp" />

        <TextView
            android:layout_width="38dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="backToMenu"
            app:srcCompat="@drawable/close_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="337dp"
        android:orientation="horizontal"
        android:background="#2BCCD7">

        <LinearLayout
            android:layout_width="140dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="43dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/countdown" />

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="60"
                    android:textColor="#ffffff"
                    android:textSize="40dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:gravity="center"
                    android:text="Total"
                    android:background="@drawable/textview_title_border"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:text="50"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:gravity="center"
                    android:text="Current"
                    android:background="@drawable/textview_title_border"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:text="1"
                    />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="388dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                app:srcCompat="@drawable/notebook" />

            <TextView
                android:layout_width="310dp"
                android:layout_height="224dp"
                android:layout_marginTop="33dp"
                android:layout_marginLeft="35dp"
                android:text=""
                android:id="@+id/txtQuestion"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="@drawable/button_bg_round"
                android:text="A"
                android:textSize="40dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="6dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="@drawable/button_bg_round"
                android:text="B"
                android:textSize="40dp"
                android:layout_marginBottom="12dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="@drawable/button_bg_round"
                android:text="C"
                android:textSize="40dp"
                android:layout_marginBottom="12dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="@drawable/button_bg_round"
                android:text="D"
                android:textSize="40dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>